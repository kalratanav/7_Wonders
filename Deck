import java.io.File;
import java.io.FileNotFoundException;
import java.io.IOException;
import java.util.ArrayList;
import java.util.Scanner;

public class Deck 
{
	private ArrayList<Card> age1;
	private ArrayList<Card> age2;
	private ArrayList<Card> age3;
	
	public Deck() throws IOException
	{
		age1 = new ArrayList<Card>();
		age2 = new ArrayList<Card>();
		age3 = new ArrayList<Card>();
		Scanner input = new Scanner(new File("deck.txt"));
		input.nextLine();
		input.nextLine();
		while(input.hasNextLine())
		{
			while(input.hasNext())
			{
				Card c = new Card(input.next(), Integer.parseInt(input.next()), input.next(), input.next(), input.next(), input.next(), input.next(), Integer.parseInt(input.next()));
				if(c.getAge()==1)
					age1.add(c);
				else if(c.getAge()==2)
					age2.add(c);
				else
					age3.add(c);
			}
		}
	}
	
	public ArrayList<Card> getAge1()
	{
		return age1;
	}
	
	public ArrayList<Card> getAge2()
	{
		return age2;
	}
	
	public ArrayList<Card> getAge3()
	{
		return age3;
	}
	
}
